{
	"manifest_version": 3,
	"name": "My Chrome Extension",
	"version": "1.0",
	"description": "A simple Chrome extension example.",
	"action": {
		"default_popup": "popup.html"
	},
	"permissions": [ "storage", "activeTab" ],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [ "https://*/*" ],
			"js": [ "content.js" ]
		}
	]
}
